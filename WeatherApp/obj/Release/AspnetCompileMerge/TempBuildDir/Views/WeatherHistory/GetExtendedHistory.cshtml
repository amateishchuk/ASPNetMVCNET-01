@model IEnumerable<WeatherApp.Domain.Entities.HistoryRecord>
@{
    ViewBag.Title = "Extended history";
}
<table class="w3-table w3-bordered w3-centered">
    <tbody>
        <tr>
            <td><p><img src="~/Content/calendar.png" title="Calendar" /></p></td>
            <td><p><img src="~/Content/city.png" /></p></td>
            <td><p><img src="~/Content/temperature.png" title="Temperature" /></p></td>
            <td><p><img src="~/Content/humidity.png" title="Humidity" /></p></td>
            <td><p><img src="~/Content/pressure.ico" title="Pressure" /></p></td>
            <td><p><img src="~/Content/wind.png" title="Wind" /></p></td>
            <td><p><img src="~/Content/cloud.png" title="Cloud" /></p></td>
        </tr>
        @foreach (var record in Model)
        {
            <tr>
                <td>
                    @record.DateTime.ToString("g")                        
                </td>
                <td>@record.City</td>
                <td>
                    <ul>
                        <li><small>Morning:</small> @record.DayData.Temp.Morn°C</li>
                        <li><small>Day:</small> @record.DayData.Temp.Day°C</li>
                        <li><small>Evening:</small> @record.DayData.Temp.Eve°C</li>
                        <li><small>Night:</small> @record.DayData.Temp.Night°C</li>
                        <li><small>Min:</small> @record.DayData.Temp.Min°C</li>
                        <li><small>Max:</small> @record.DayData.Temp.Max°C</li>
                    </ul>
                </td>
                <td>@record.DayData.Humidity %</td>
                <td>@record.DayData.Pressure Pa</td>
                <td>@record.DayData.Speed m/s @record.DayData.Deg°</td>
                <td>@record.DayData.Clouds %</td>
            </tr>
        }
    </tbody>
</table>
<h4>@Html.ActionLink("Back to main", "GetWeather", "Weather")</h4>


