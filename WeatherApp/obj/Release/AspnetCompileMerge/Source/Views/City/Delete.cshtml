@model WeatherApp.Domain.Entities.City

@{
    ViewBag.Title = "Delete " + Model.Name;
}
<div class="w3-display-middle">
    @using (Html.BeginForm())
    {
        <div class="w3-group">
            @Html.HiddenFor(model => model.Id)            
            Delete @Html.DisplayFor(model => model.Name) from favorite?
            <div class="w3-section">
                <button type="submit" class="w3-button w3-ripple w3-blue w3-round-large">Delete</button>
                <a class="w3-button w3-ripple w3-white w3-round-large" href="@Url.Action("ShowWeather", "Weather")">Back to main</a>
            </div>
        </div>
    }
</div>
