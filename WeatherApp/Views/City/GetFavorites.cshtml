@model IEnumerable<WeatherApp.Domain.Entities.City>

<ul class="w3-ul">
    <li><h3>Favorite cities:</h3></li>
    @foreach(var city in Model.OrderBy(c=>c.Name))
    {
        <li class="w3-left-align">
            <a href="@Url.Action("Edit", "City", new { id = city.Id })"><img class="small-icon" src="~/Content/settings.png" title="Edit" /></a>
            @Html.ActionLink(city.Name, "GetWeather", "Weather", new { city = city.Name }, null)
        </li>
    }
</ul>
@using (Html.BeginForm("Add", "City"))
{
    <div class="w3-group">
        <input type="text" class="w3-input w3-round-large" name="city" placeholder="Input favorite city" required>
        <button type="submit" class="w3-button w3-block w3-ripple w3-green w3-round-large">Add to favorite</button>
    </div>
}

