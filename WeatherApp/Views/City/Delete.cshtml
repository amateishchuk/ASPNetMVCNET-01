@model WeatherApp.Domain.Entities.City

@{
    ViewBag.Title = "Delete " + Model.Name;
}
<div class="w3-display-middle">
    @using (Html.BeginForm())
    {
        <div class="w3-group">
            @Html.HiddenFor(model => model.Id)            
            Delete @Html.DisplayFor(model => model.Name) from favorite?
            <hr />
            <button type="submit" class="w3-button w3-block w3-ripple w3-red w3-round-large">Confirm</button>
            @Html.ActionLink("Back to edit", "Edit", "City", new { id = Model.Id }, new { @class = "w3-button w3-block w3-ripple w3-blue w3-round-large" })
            @Html.RouteLink("Back to main", "Empty", null, new { @class = "w3-btn w3-block w3-white w3-border w3-border-blue w3-text-blue w3-round-large" })
        </div>
    }
</div>
